// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String    @id @default(cuid())
  radixAddress    String    @unique @map("radix_address")
  personaAddress  String?   @map("persona_address")
  displayName     String?   @map("display_name")
  avatarUrl       String?   @map("avatar_url")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  pages           Page[]
  revisions       Revision[]
  comments        Comment[]
  
  @@map("users")
}

model Page {
  id          String    @id @default(cuid())
  slug        String
  title       String
  content     Json      @default("{}")
  excerpt     String?
  bannerImage String?   @map("banner_image")
  tagPath     String    @map("tag_path")
  metadata    Json?     @default("{}")
  version     String    @default("1.0.0")
  authorId    String    @map("author_id")
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  revisions   Revision[]
  comments    Comment[]
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@unique([tagPath, slug])
  @@index([slug])
  @@index([authorId])
  @@index([tagPath])
  @@index([tagPath, createdAt])
  @@index([tagPath, updatedAt])
  @@map("pages")
}

model Revision {
  id         String   @id @default(cuid())
  pageId     String   @map("page_id")
  page       Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  content    Json
  title      String
  version    String   @default("1.0.0")
  changeType String   @default("patch") @map("change_type") // major | minor | patch
  changes    Json?    // BlockChange[] - structured diff
  authorId   String   @map("author_id")
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  message    String?
  createdAt  DateTime @default(now()) @map("created_at")
  
  @@index([pageId])
  @@index([pageId, createdAt])
  @@index([createdAt])
  @@index([authorId])
  @@map("revisions")
}

model Session {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  token        String   @unique
  expiresAt    DateTime @map("expires_at")
  createdAt    DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

model Challenge {
  id        String   @id @default(cuid())
  challenge String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([expiresAt])
  @@map("challenges")
}

model Comment {
  id        String    @id @default(cuid())
  pageId    String    @map("page_id")
  page      Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
  parentId  String?   @map("parent_id")
  parent    Comment?  @relation("Replies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("Replies")
  content   String
  authorId  String    @map("author_id")
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  
  @@index([pageId, parentId])
  @@index([authorId])
  @@map("comments")
}

model Tweet {
  id          String   @id @default(cuid())
  tweetId     String?  @unique @map("tweet_id")
  type        String   @default("post")
  pillar      String?
  pageSlug    String?  @map("page_slug")
  pageTagPath String?  @map("page_tag_path")
  text        String
  inReplyTo   String?  @map("in_reply_to")
  status      String   @default("sent")
  error       String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([type, createdAt])
  @@index([inReplyTo])
  @@map("tweets")
}
